
<h1>You dug for <%=@search_term%> ...</h1>
<%if @result_array == "There is nothing here ..."%>
<h2><%=@result_array%></h2>
<%else%>
<h2>Woohoo - you uncovered some great art!</h2>
<p><a href="">Dig deeper</a>? Or click on any of the links below to dig in a different direction ...</p>

<table border ="1">
  <th>Title</th>
  <th>Image</th>
  <th>Artist</th>
  <th>Medium</th>
  <th>Style</th>
  <th>Year</th>
  <th>Place of Origin</th>

<% @result_array.each do |artwork| %>  
  <tr>
    <td><%=artwork.title%></td>
    <td><img src = "<%=artwork.image%>"></td>
    <td><a href="/artist/<%=artwork.artist%>"><%=artwork.artist%></a></td>
    <td><a href="/medium/<%=artwork.medium_id%>"><%=artwork.medium%></td>
    <td><a href="/style/<%=artwork.style_id%>"><%=artwork.style%></a></td>
    <td><a href="/year/<%=artwork.date_end%>"><%=artwork.date_display%></td>
    <td><a href="/place_of_origin/<%=artwork.place_of_origin%>"><%=artwork.place_of_origin%></td>
  </tr>

<%end%>

</table>
<%end%>
